<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activities.Propertys.AdminAddNewProductActivity">

    <LinearLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/purple_700"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/toolbar"
                android:layout_width="42dp"
                android:background="?selectableItemBackground"
                android:layout_height="42dp"
                android:layout_gravity="center"
                android:scaleType="centerInside"
                android:src="@drawable/back_arrow"
                app:tint="@color/white" />


            <TextView
                android:id="@+id/tool_bar_title_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:text="Enter Property Details"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_marginStart="10dp"
                android:layout_gravity="center_vertical"/>


            <TextView
                android:id="@+id/tv_site_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="12sp"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black"/>


            <ImageView
                android:id="@+id/home_icon"
                android:layout_width="42dp"
                android:background="?selectableItemBackground"
                android:layout_height="42dp"
                android:visibility="visible"
                android:scaleType="centerInside"
                android:src="@drawable/home_icon"
                app:tint="@color/white" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_form"
        app:layout_constraintTop_toBottomOf="@id/top_bar"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/dp_60"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="0dp">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="3sp"
                    android:text="Upload Documents"
                    android:textColor="@color/black50per"
                    android:textSize="@dimen/text_size_12sp" />
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/image_card"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="@dimen/margin_6_dp"
                        android:layout_marginEnd="@dimen/margin_15_dp"
                        android:layout_marginBottom="@dimen/margin_10dp"
                        android:layout_marginStart="@dimen/dp_20"
                        app:cardElevation="@dimen/dp_0"
                        app:cardCornerRadius="@dimen/margin_10dp"
                        android:layout_width="124dp"
                        android:layout_height="112dp">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/background_image_color">
                            <ImageView
                                android:id="@+id/select_corosel_image"

                                android:src="@drawable/ic_person"
                                android:scaleType="centerCrop"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>

                            <ImageView
                                android:id="@+id/plus_icon"
                                android:layout_width="@dimen/dp_30"
                                android:layout_height="@dimen/dp_30"
                                android:layout_centerInParent="true"
                                android:src="@drawable/plus_symbol"
                                android:visibility="visible" />
                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>
                    <ImageView
                        android:id="@+id/iv_delete"

                        android:layout_marginEnd="@dimen/dp_5"
                        android:src="@drawable/close_red"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_width="@dimen/dp_25"
                        android:layout_height="@dimen/dp_25"/>
                </androidx.constraintlayout.widget.ConstraintLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginStart="@dimen/dp_20"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:lineSpacingExtra="3sp"
                        android:text="Property Name"
                        android:textColor="@color/black50per"
                        android:textSize="@dimen/text_size_12sp" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/ads_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp_5"
                            android:layout_weight="1"
                            android:background="@null"
                            android:backgroundTint="@color/black20per"
                            android:dropDownVerticalOffset="@dimen/margin_100dp"
                            android:hint="Property Name"
                            android:inputType="textCapWords"
                            android:paddingTop="3dp"
                            android:paddingEnd="@dimen/margin_5_dp"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black20per"
                            android:textCursorDrawable="@null"
                            android:textSize="@dimen/text_size_16sp"
                            android:textStyle="bold"
                            android:visibility="visible"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:visibility="visible"
                        android:background="@color/black20per" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginStart="@dimen/dp_20"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:lineSpacingExtra="3sp"
                        android:text="Category"
                        android:textColor="@color/black50per"
                        android:textSize="@dimen/text_size_12sp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/ads_type_admin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="3dp"
                            android:visibility="visible"
                            android:background="@null"
                            android:textCursorDrawable="@null"
                            android:layout_weight="1"
                            android:paddingEnd="@dimen/margin_5_dp"
                            android:hint="Category"
                            android:singleLine="true"
                            android:inputType="textCapWords"
                            android:textStyle="bold"
                            android:backgroundTint="@color/black20per"
                            android:textSize="@dimen/text_size_16sp"
                            android:layout_marginBottom="@dimen/dp_5"
                            android:textColorHint="@color/black20per"
                            android:textColor="@color/black"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:dropDownVerticalOffset="@dimen/margin_100dp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:visibility="visible"
                        android:background="@color/black20per" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginStart="@dimen/dp_20"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:lineSpacingExtra="3sp"
                        android:text="Size"
                        android:textColor="@color/black50per"
                        android:textSize="@dimen/text_size_12sp" />
                    <EditText
                        android:id="@+id/ads_size"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="3dp"
                        android:visibility="visible"
                        android:maxLength="16"
                        android:background="@null"
                        android:textCursorDrawable="@null"
                        android:layout_weight="1"
                        android:paddingEnd="@dimen/margin_5_dp"
                        android:hint="Size"
                        android:singleLine="true"
                        android:inputType="textCapWords"
                        android:textStyle="bold"
                        android:backgroundTint="@color/black20per"
                        android:textSize="@dimen/text_size_16sp"
                        android:layout_marginBottom="@dimen/dp_5"
                        android:textColorHint="@color/black20per"
                        android:textColor="@color/black"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:dropDownVerticalOffset="@dimen/margin_100dp" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:visibility="visible"
                        android:background="@color/black20per" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginStart="@dimen/dp_20"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:lineSpacingExtra="3sp"
                        android:text="Description"
                        android:textColor="@color/black50per"
                        android:textSize="@dimen/text_size_12sp" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/ads_description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp_5"
                            android:layout_weight="1"
                            android:background="@null"
                            android:backgroundTint="@color/black20per"
                            android:dropDownVerticalOffset="@dimen/margin_100dp"
                            android:hint="Description"
                            android:inputType="textCapWords"
                            android:paddingTop="3dp"
                            android:paddingEnd="@dimen/margin_5_dp"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black20per"
                            android:textCursorDrawable="@null"
                            android:textSize="@dimen/text_size_16sp"
                            android:textStyle="bold"
                            android:visibility="visible"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:visibility="visible"
                        android:background="@color/black20per" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginStart="@dimen/dp_20"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:lineSpacingExtra="3sp"
                        android:text="Price"
                        android:textColor="@color/black50per"
                        android:textSize="@dimen/text_size_12sp" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/ads_price_admin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp_5"
                            android:layout_weight="1"
                            android:background="@null"
                            android:backgroundTint="@color/black20per"
                            android:dropDownVerticalOffset="@dimen/margin_100dp"
                            android:hint="Price"
                            android:inputType="number"
                            android:paddingTop="3dp"
                            android:paddingEnd="@dimen/margin_5_dp"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black20per"
                            android:textCursorDrawable="@null"
                            android:textSize="@dimen/text_size_16sp"
                            android:textStyle="bold"
                            android:visibility="visible"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:visibility="visible"
                        android:background="@color/black20per" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginStart="@dimen/dp_20"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:lineSpacingExtra="3sp"
                        android:text="Location"
                        android:textColor="@color/black50per"
                        android:textSize="@dimen/text_size_12sp" />
                    <EditText
                        android:id="@+id/ads_location_admin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="3dp"
                        android:maxLength="11"
                        android:visibility="visible"
                        android:background="@null"
                        android:textCursorDrawable="@null"
                        android:layout_weight="1"
                        android:paddingEnd="@dimen/margin_5_dp"
                        android:hint="Location"
                        android:singleLine="true"
                        android:inputType="textCapWords"
                        android:textStyle="bold"
                        android:backgroundTint="@color/black20per"
                        android:textSize="@dimen/text_size_16sp"
                        android:layout_marginBottom="@dimen/dp_5"
                        android:textColorHint="@color/black20per"
                        android:textColor="@color/black"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:dropDownVerticalOffset="@dimen/margin_100dp" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:visibility="visible"
                        android:background="@color/black20per" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginStart="@dimen/dp_20"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:lineSpacingExtra="3sp"
                        android:text="Contact Number"
                        android:textColor="@color/black50per"
                        android:textSize="@dimen/text_size_12sp" />
                    <EditText
                        android:id="@+id/ads_contact_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="3dp"
                        android:maxLength="11"
                        android:visibility="visible"
                        android:background="@null"
                        android:textCursorDrawable="@null"
                        android:layout_weight="1"
                        android:paddingEnd="@dimen/margin_5_dp"
                        android:hint="Contact Number"
                        android:singleLine="true"
                        android:inputType="number"
                        android:textStyle="bold"
                        android:backgroundTint="@color/black20per"
                        android:textSize="@dimen/text_size_16sp"
                        android:layout_marginBottom="@dimen/dp_5"
                        android:textColorHint="@color/black20per"
                        android:textColor="@color/black"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:dropDownVerticalOffset="@dimen/margin_100dp" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:visibility="visible"
                        android:background="@color/black20per" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_opening_balance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginStart="@dimen/dp_20"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:lineSpacingExtra="3sp"
                        android:text="Verified or not"
                        android:textColor="@color/black50per"
                        android:textSize="@dimen/text_size_12sp" />
                    <EditText
                        android:id="@+id/ads_verify_or_nt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="3dp"
                        android:visibility="visible"
                        android:background="@null"
                        android:textCursorDrawable="@null"
                        android:layout_weight="1"
                        android:paddingEnd="@dimen/margin_5_dp"
                        android:hint="Verified or not"
                        android:singleLine="true"
                        android:maxLength="15"
                        android:inputType="textCapWords"
                        android:textStyle="bold"
                        android:backgroundTint="@color/black20per"
                        android:textSize="@dimen/text_size_16sp"
                        android:layout_marginBottom="@dimen/dp_5"
                        android:textColorHint="@color/black20per"
                        android:textColor="@color/black"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:dropDownVerticalOffset="@dimen/margin_100dp" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:visibility="visible"
                        android:background="@color/black20per" />
                </LinearLayout>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginStart="@dimen/dp_20"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:lineSpacingExtra="3sp"
                        android:text="Points 1"
                        android:textColor="@color/black50per"
                        android:textSize="@dimen/text_size_12sp" />
                    <EditText
                        android:id="@+id/ads_text1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="3dp"
                        android:visibility="visible"
                        android:background="@null"
                        android:textCursorDrawable="@null"
                        android:layout_weight="1"
                        android:paddingEnd="@dimen/margin_5_dp"
                        android:hint="Points 1"
                        android:singleLine="true"
                        android:maxLength="15"
                        android:inputType="textCapWords"
                        android:textStyle="bold"
                        android:backgroundTint="@color/black20per"
                        android:textSize="@dimen/text_size_16sp"
                        android:layout_marginBottom="@dimen/dp_5"
                        android:textColorHint="@color/black20per"
                        android:textColor="@color/black"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:dropDownVerticalOffset="@dimen/margin_100dp" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:visibility="visible"
                        android:background="@color/black20per" />
                </LinearLayout>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginStart="@dimen/dp_20"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:lineSpacingExtra="3sp"
                        android:text="Points 2"
                        android:textColor="@color/black50per"
                        android:textSize="@dimen/text_size_12sp" />
                    <EditText
                        android:id="@+id/ads_text2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="3dp"
                        android:visibility="visible"
                        android:background="@null"
                        android:textCursorDrawable="@null"
                        android:layout_weight="1"
                        android:paddingEnd="@dimen/margin_5_dp"
                        android:hint="Points 2"
                        android:singleLine="true"
                        android:maxLength="15"
                        android:inputType="textCapWords"
                        android:textStyle="bold"
                        android:backgroundTint="@color/black20per"
                        android:textSize="@dimen/text_size_16sp"
                        android:layout_marginBottom="@dimen/dp_5"
                        android:textColorHint="@color/black20per"
                        android:textColor="@color/black"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:dropDownVerticalOffset="@dimen/margin_100dp" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:visibility="visible"
                        android:background="@color/black20per" />
                </LinearLayout>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginStart="@dimen/dp_20"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:lineSpacingExtra="3sp"
                        android:text="Points 3"
                        android:textColor="@color/black50per"
                        android:textSize="@dimen/text_size_12sp" />
                    <EditText
                        android:id="@+id/ads_text3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="3dp"
                        android:visibility="visible"
                        android:background="@null"
                        android:textCursorDrawable="@null"
                        android:layout_weight="1"
                        android:paddingEnd="@dimen/margin_5_dp"
                        android:hint="Points 3"
                        android:singleLine="true"
                        android:maxLength="15"
                        android:inputType="textCapWords"
                        android:textStyle="bold"
                        android:backgroundTint="@color/black20per"
                        android:textSize="@dimen/text_size_16sp"
                        android:layout_marginBottom="@dimen/dp_5"
                        android:textColorHint="@color/black20per"
                        android:textColor="@color/black"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:dropDownVerticalOffset="@dimen/margin_100dp" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
