                                android:id="@+id/rl_document"
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:layout_marginStart="@dimen/dp_20"
                                android:layout_marginEnd="@dimen/dp_20"
                                android:background="@drawable/image_place_holder">
