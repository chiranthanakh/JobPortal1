<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/relativeLayout3"
        android:background="@drawable/top_bg_curve"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:id="@+id/rl_phone"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="300dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/et_bg"
            android:padding="12dp">

            <ImageView
                android:id="@+id/iv_email"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="3dp"
                android:scaleType="centerCrop"
                android:src="@drawable/flag" />



            <View
                android:id="@+id/view1"
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="#e3e4e5" />

            <EditText
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/view1"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="Phone Number"
                android:inputType="phone"
                android:letterSpacing="0.1"
                android:maxLength="10"
                android:maxLines="1"
                android:paddingLeft="2dp"
                android:textColor="@color/black"
                android:textColorHint="@color/material_grey_600"
                android:textSize="12sp"
                tools:ignore="MissingClass" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="50dp"
            android:text="Welcome back to\nGSTeam Call CRM"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="normal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_welcome"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:text="Enter your mobile number for verification."
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="normal" />

        <Button
            android:id="@+id/btn_verify_number"
            android:onClick="onVerifyNumber"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/rl_phone"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="14dp"
            android:background="@drawable/btn_bg"
            android:gravity="center"
            android:text="Verify"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>