<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Activities.Admin.AdminDashboard">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:paddingBottom="@dimen/dp_20"
    android:orientation="horizontal">

    <Button
        android:id="@+id/btn_corosel"
        android:layout_width="@dimen/margin_100dp"
        android:layout_height="100dp"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_gravity="center"
        android:text="add corosel image"/>

    <Button
        android:id="@+id/btn_ads"
        android:layout_width="@dimen/margin_100dp"
        android:layout_height="100dp"
        android:layout_marginRight="@dimen/dp_20"
        android:text="add ads image"/>

    <Button
        android:id="@+id/btn_hot_deals"
        android:layout_width="@dimen/margin_100dp"
        android:layout_height="100dp"
        android:text="add hot deals"/>

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingBottom="@dimen/dp_20"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_business_listing"
            android:layout_width="@dimen/margin_100dp"
            android:layout_height="100dp"
            android:layout_marginRight="@dimen/dp_20"
            android:text="Business listing"/>

    <Button
        android:id="@+id/btn_loan_offers"
        android:layout_width="@dimen/margin_100dp"
        android:layout_height="100dp"
        android:layout_marginRight="@dimen/dp_20"
        android:text="Add Loan offers"/>

        <Button
            android:id="@+id/btn_layouts"
            android:layout_width="@dimen/margin_100dp"
            android:layout_height="100dp"
            android:text="add Layouts"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingBottom="@dimen/dp_20"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_business_category"
            android:layout_width="@dimen/margin_100dp"
            android:layout_height="100dp"
            android:layout_marginRight="@dimen/dp_20"
            android:text="Add Loan offers"/>

        <Button
            android:id="@+id/btn_livingplace"
            android:layout_width="@dimen/margin_100dp"
            android:layout_height="100dp"
            android:layout_marginRight="@dimen/dp_20"
            android:text="Add living place"/>

        <Button
            android:id="@+id/btn_travels"
            android:layout_width="@dimen/margin_100dp"
            android:layout_height="100dp"
            android:layout_marginRight="@dimen/dp_20"
            android:text="Add travels"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingBottom="@dimen/dp_20"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_construction_category"
            android:layout_width="@dimen/margin_100dp"
            android:layout_height="100dp"
            android:layout_marginRight="@dimen/dp_20"
            android:text="Add construction category"/>

        <Button
            android:id="@+id/btn_construction"
            android:layout_width="@dimen/margin_100dp"
            android:layout_height="100dp"
            android:layout_marginRight="@dimen/dp_20"
            android:text="Add construction"/>

        <Button
            android:id="@+id/btn_Hotels"
            android:layout_width="@dimen/margin_100dp"
            android:layout_height="100dp"
            android:layout_marginRight="@dimen/dp_20"
            android:text="Add Hotels/Pg"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingBottom="@dimen/dp_20"
        android:orientation="vertical">

        <Button
            android:id="@+id/propertys_for_approval"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="propertys for approval"/>

        <Button
            android:id="@+id/business_for_approval"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="Business for approval"/>

        <Button
            android:id="@+id/travel_approval"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="Travel for approval"/>

    </LinearLayout>


</LinearLayout>