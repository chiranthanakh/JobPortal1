<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activities.OtpLoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:animateLayoutChanges="true"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="@dimen/dp_30"
        android:layout_marginStart="@dimen/dp_30"
        android:orientation="vertical">
        <TextView
            android:text="Login"
            android:gravity="center"
            android:textSize="@dimen/text_size_28sp"
            android:textStyle="bold"
            android:textColor="@color/dark_text"
            android:layout_marginBottom="@dimen/dp_30"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            app:cardCornerRadius="@dimen/dp_25"
            android:layout_margin="@dimen/dp_5"
            app:cardElevation="@dimen/dp_3">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:src="@drawable/telephone"
                    android:padding="@dimen/dp_5"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="15dp"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"/>
                <EditText
                    android:id="@+id/edt_phone"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:layout_weight="1"
                    android:maxLength="10"
                    android:inputType="number"
                    android:paddingStart="10dp"
                    android:hint="Enter Mobile Number"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <TextView
                    android:text="Send OTP"
                    android:id="@+id/tv_send_otp"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:visibility="gone"
                    android:textColor="@color/colorBlue"
                    android:textSize="@dimen/text_size_16sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="@dimen/margin_15_dp"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_otp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            app:cardCornerRadius="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_20"
            android:visibility="gone"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_marginEnd="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_5"
            app:cardElevation="@dimen/dp_3">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:src="@drawable/lock"
                    android:padding="@dimen/dp_5"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="15dp"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"/>
                <EditText
                    android:id="@+id/edt_otp"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:layout_weight="1"
                    android:maxLength="6"
                    android:inputType="number"
                    android:paddingStart="10dp"
                    android:hint="Enter OTP"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <Button
            android:id="@+id/btn_continue"
            android:text="Continue"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/dp_30"
            android:backgroundTint="@color/colorPrimary"
            android:background="@drawable/button_capsule"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>