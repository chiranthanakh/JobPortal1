<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activities.Propertys.PropertyDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/purple_500"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/iv_menu"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="?selectableItemBackground"
                android:padding="15dp"
                android:src="@drawable/back_arrow"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/tv_topbar_productName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="The Taj Hotel Bangalore"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/share"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:background="?selectableItemBackground"
                android:padding="15dp"
                android:src="@drawable/share" />

        </LinearLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="80dp"
                android:orientation="vertical">


                <com.synnapps.carouselview.CarouselView
                    android:id="@+id/hot_details_carouselView"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    app:fillColor="#FFFFFFFF"
                    app:pageColor="#00000000"
                    app:radius="6dp"
                    app:slideInterval="3000"
                    app:strokeColor="#FF777777"
                    app:strokeWidth="1dp" />

                <!--  <FrameLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:background="@color/white"
                      android:paddingBottom="5dp">
                      <LinearLayout
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="vertical">

                          <androidx.viewpager.widget.ViewPager
                              android:id="@+id/product_viewpager"
                              android:layout_width="match_parent"
                              android:layout_height="240dp">
                              <com.google.android.material.tabs.TabLayout
                                  android:id="@+id/tab_layout"
                                  android:layout_gravity="center_horizontal|bottom"
                                  app:tabBackground="@drawable/tab_selector"
                                  app:tabIndicatorHeight="0dp"
                                  app:tabGravity="center"
                                  app:tabPaddingStart="5dp"
                                  app:tabPaddingEnd="5dp"
                                  android:clipToPadding="false"
                                  app:tabIndicatorFullWidth="false"
                                  android:layout_width="wrap_content"
                                  android:layout_height="20dp"/>
                          </androidx.viewpager.widget.ViewPager>
                      </LinearLayout>
                  </FrameLayout>-->

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="5dp"
                    android:background="@color/white"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/approved"
                            android:drawablePadding="2dp"
                            android:fontFamily="@font/proxima_nova_semi_bold"
                            android:gravity="center"
                            android:text="VERIFIED PROPERTY"
                            android:textColor="#0dba43"
                            android:textSize="10sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"

                            android:layout_marginBottom="5dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:background="@drawable/rating_back"
                                android:gravity="center"
                                android:padding="3dp">

                                <ImageView
                                    android:layout_width="10dp"
                                    android:layout_height="10dp"
                                    android:src="@drawable/star"
                                    app:tint="@color/white" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="20dp"
                                    android:layout_marginStart="5dp"
                                    android:text="4.5"
                                    android:gravity="center"
                                    android:textColor="@color/white"
                                    android:textSize="10sp" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="5dp"
                                android:layout_marginEnd="10dp"
                                android:fontFamily="@font/proxima_family"
                                android:text="375 Ratings"
                                android:textColor="@color/black"
                                android:textSize="12sp"
                                app:layout_constraintTop_toTopOf="parent" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/hot_name_details"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/proxima_nova_semi_bold"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:textSize="18sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="@dimen/dp_20"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@color/grey_light"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="3dp">

                                <TextView
                                    android:layout_width="150dp"
                                    android:layout_height="15dp"
                                    android:src="@drawable/star"
                                    android:text="Price"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:textSize="14dp"
                                    android:textColor="@color/purple_700"
                                    android:textStyle="bold"
                                    app:tint="@color/white" />

                                <TextView
                                    android:id="@+id/hot_price_details"
                                    android:layout_width="wrap_content"
                                    android:layout_height="20dp"
                                    android:layout_marginStart="5dp"
                                    android:text="4.5"
                                    android:layout_marginTop="@dimen/margin_10_dp"
                                    android:gravity="center"
                                    android:textColor="@color/black"
                                    android:textSize="18sp" />
                            </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:background="@color/grey_light"
                                    android:gravity="center"
                                    android:layout_marginLeft="@dimen/dp_20"
                                    android:orientation="vertical"
                                    android:padding="3dp">

                                    <TextView
                                        android:layout_width="150dp"
                                        android:layout_height="15dp"
                                        android:src="@drawable/star"
                                        android:text="Size"
                                        android:textSize="14dp"
                                        android:textColor="@color/purple_700"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:textStyle="bold"
                                        app:tint="@color/white" />

                                    <TextView
                                        android:id="@+id/hot_size_details"
                                        android:layout_width="wrap_content"
                                        android:layout_height="20dp"
                                        android:layout_marginStart="5dp"
                                        android:text="4.5"
                                        android:layout_marginTop="@dimen/margin_10_dp"
                                        android:gravity="center"
                                        android:textColor="@color/black"
                                        android:textSize="14sp" />
                                </LinearLayout>

                        </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dp_20"
                                android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/proxima_nova_semi_bold"
                                android:gravity="center"
                                android:layout_marginTop="@dimen/dp_20"
                                android:drawableStart="@drawable/map"
                                android:drawableTint="@color/red"
                                android:drawablePadding="3dp"
                                android:text="Location"
                                android:textColor="@color/purple_700"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tv_hot_location"
                                android:layout_width="150dp"
                                android:layout_height="15dp"
                                android:src="@drawable/star"
                                android:text="Size"
                                android:layout_marginStart="@dimen/dp_20"
                                android:layout_marginTop="@dimen/margin_10_dp"
                                android:textSize="14dp"
                                android:textStyle="bold"
                                app:tint="@color/white" />

                            <TextView
                                android:id="@+id/tv_posted_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginStart="@dimen/dp_20"
                                android:fontFamily="@font/proxima_family"
                                android:gravity="center"
                                android:text="Posted on May 07,22"
                                android:textColor="@color/grey"
                                android:textSize="11sp" />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableStart="@drawable/check"
                                android:drawablePadding="2dp"
                                android:fontFamily="@font/proxima_family"
                                android:gravity="center"
                                android:text="Newly Constructed Property"
                                android:textColor="@color/black"
                                android:textSize="12sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableStart="@drawable/check"
                                android:drawablePadding="2dp"
                                android:fontFamily="@font/proxima_family"
                                android:gravity="center"
                                android:text="Newly Constructed Property"
                                android:textColor="@color/black"
                                android:textSize="12sp" />


                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/ll_coins_buy"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp">

                            <TextView
                                android:id="@+id/hot_description_details"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/proxima_family"
                                android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book.remaining essentially unchanged."
                                android:textColor="@color/black"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </LinearLayout>
                </FrameLayout>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:orientation="horizontal"
            android:background="@drawable/customborder"
            android:layout_gravity="end"
            android:gravity="center"
            android:layout_marginEnd="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Contact:"
                android:layout_marginRight="@dimen/dp_30"
                />

            <ImageView
                android:id="@+id/hd_cl_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:src="@drawable/ic_call"/>

            <ImageView
                android:id="@+id/hd_whtsapp_btn"
                android:text="Call Us"
                android:visibility="visible"
                android:textColor="@color/white"
                android:src="@drawable/whatsapp"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/tv_btn_call_hot"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_capsule_blue"
            android:text="Call us"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>