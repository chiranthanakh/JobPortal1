<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Dashboard.LocationSelectActivity">

    <TextView
        android:id="@+id/tv_heading"
        android:text="Where You looking to Buy/Sell/Rent Property"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        android:padding="@dimen/dp_20"
        android:textSize="18dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
        android:id="@+id/ll_district"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/spinner_background"
        android:layout_marginStart="10dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:paddingStart="@dimen/dp_20"
        android:paddingLeft="@dimen/dp_20"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/tv_heading">

        <Spinner
            android:id="@+id/sp_district"
            android:layout_width="200dp"
            android:layout_height="50dp" />

        <LinearLayout
            android:id="@+id/ll_ok"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="@dimen/margin_10_dp"
            android:background="@drawable/gradent3"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/proxima_nova_bold"
                android:insetTop="0dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:insetBottom="0dp"
                android:text="Done"
                android:textColor="@color/white" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_property_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/proxima_nova_bold"
        android:insetTop="0dp"
        android:textSize="18sp"
        android:insetBottom="0dp"
        android:layout_marginTop="70dp"
        android:drawableEnd="@drawable/ic_next"
        android:layout_marginStart="@dimen/dp_30"
        android:layout_marginEnd="@dimen/dp_30"
        android:text="Property Search"
        android:textColor="@color/purple_500"
        app:layout_constraintTop_toBottomOf="@+id/ll_district"/>

    <TextView
        android:id="@+id/tv_property"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/proxima_nova_bold"
        android:insetTop="0dp"
        android:textSize="13sp"
        android:insetBottom="0dp"
        android:layout_marginStart="@dimen/dp_30"
        android:text="Buy, rent  a property"
        android:textColor="#988F8F"
        app:layout_constraintTop_toBottomOf="@+id/tv_property_search"/>

    <View
        android:id="@+id/views"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="@dimen/dp_20"
        android:background="#8D8D91"
        android:layout_marginEnd="@dimen/dp_30"
        app:layout_constraintTop_toBottomOf="@+id/tv_property"/>

    <TextView
        android:id="@+id/tv_property_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/proxima_nova_bold"
        android:insetTop="0dp"
        android:textSize="18sp"
        android:insetBottom="0dp"
        android:layout_marginTop="20dp"
        android:drawableEnd="@drawable/ic_next"
        android:layout_marginStart="@dimen/dp_30"
        android:layout_marginEnd="@dimen/dp_30"
        android:text="Post Property"
        android:textColor="@color/purple_500"
        app:layout_constraintTop_toBottomOf="@+id/views"/>

    <TextView
        android:id="@+id/tv_property1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/proxima_nova_bold"
        android:insetTop="0dp"
        android:textSize="13sp"
        android:insetBottom="0dp"
        android:layout_marginStart="@dimen/dp_30"
        android:text="Sell or Rent out your property"
        android:textColor="#988F8F"
        app:layout_constraintTop_toBottomOf="@+id/tv_property_post"/>

    <View
        android:id="@+id/views1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="@dimen/dp_20"
        android:background="#8D8D91"
        android:layout_marginEnd="@dimen/dp_30"
        app:layout_constraintTop_toBottomOf="@+id/tv_property1"/>

    <TextView
        android:id="@+id/tv_property_rent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/proxima_nova_bold"
        android:insetTop="0dp"
        android:textSize="18sp"
        android:insetBottom="0dp"
        android:layout_marginTop="20dp"
        android:drawableEnd="@drawable/ic_next"
        android:layout_marginStart="@dimen/dp_30"
        android:layout_marginEnd="@dimen/dp_30"
        android:text="Post Rent Property"
        android:textColor="@color/purple_500"
        app:layout_constraintTop_toBottomOf="@+id/views1"/>

    <TextView
        android:id="@+id/tv_property2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/proxima_nova_bold"
        android:insetTop="0dp"
        android:textSize="13sp"
        android:insetBottom="0dp"
        android:layout_marginStart="@dimen/dp_30"
        android:text="Post a Rented or Lease propety "
        android:textColor="#988F8F"
        app:layout_constraintTop_toBottomOf="@+id/tv_property_rent"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/loginbackground"
        android:layout_marginTop="15dp"
        app:layout_constraintBottom_toBottomOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>