<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activities.Propertys.AdminAddNewProductActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            app:navigationIcon="@drawable/back_arrow"
            android:layout_height="?attr/actionBarSize"
            app:title="Property Details"
            app:titleTextColor="@color/white"
            app:titleTextAppearance="@style/TitleBarTextAppearance"
            style="@style/Widget.MaterialComponents.Toolbar.Primary"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <ImageView
                android:id="@+id/select_vehicle_images"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:cropToPadding="false"
                android:scaleType="centerCrop"
                android:src="@drawable/select_product_image" />


            <EditText
                android:id="@+id/edt_vehicle_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/select_vehicle_images"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="45dp"
                android:hint="Vehicle name"
                android:inputType="textMultiLine"
                android:padding="20dp"
                android:textColor="#000000"
                android:textColorHint="#000000" />

            <EditText
                android:id="@+id/edt_travel_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edt_vehicle_name"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="45dp"
                android:hint="Cab/auto/tt/heavy vehicles"
                android:inputType="textMultiLine"
                android:padding="20dp"
                android:textColor="#000000"
                android:textColorHint="#000000" />

            <EditText
                android:id="@+id/edt_travel_vehicle_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edt_travel_category"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="45dp"
                android:hint="vehicle number"
                android:padding="20dp"
                android:textColor="#000000"
                android:textColorHint="#000000" />


            <EditText
                android:id="@+id/edt_rupes_for_km"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edt_travel_vehicle_number"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="45dp"
                android:hint="Rupes per KM"
                android:inputType="textMultiLine"
                android:padding="20dp"
                android:textColor="#000000"
                android:textColorHint="#000000" />


            <EditText
                android:id="@+id/edt_travel_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edt_rupes_for_km"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="45dp"
                android:hint="Contact Number"
                android:inputType="textMultiLine"
                android:padding="20dp"
                android:textColor="#000000"
                android:textColorHint="#000000" />


            <EditText
                android:id="@+id/edt_travel_vehicle_model"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edt_travel_contact"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="45dp"
                android:hint="Vehicle Model"
                android:inputType="textMultiLine"
                android:padding="20dp"
                android:textColor="#000000"
                android:textColorHint="#000000" />


            <EditText
                android:id="@+id/edt_owner_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edt_travel_vehicle_model"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="45dp"
                android:hint="Owner name"
                android:inputType="textMultiLine"
                android:padding="20dp"
                android:textColor="#000000"
                android:textColorHint="#000000" />

            <EditText
                android:id="@+id/edt_travel_verified_not"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edt_owner_name"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="45dp"
                android:hint="verifyed or nt"
                android:inputType="textMultiLine"
                android:padding="20dp"
                android:textColor="#000000"
                android:textColorHint="#000000" />

            <EditText
                android:id="@+id/edt_travel_discription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ads_verify_or_nt"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="45dp"
                android:hint="Discription"
                android:inputType="textMultiLine"
                android:padding="20dp"
                android:textColor="#000000"
                android:textColorHint="#000000" />


            <Button
                android:id="@+id/add_new_vehicle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edt_travel_discription"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="45dp"
                android:background="@drawable/buttons"
                android:padding="17dp"
                android:text="NEXT"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>