<?xml version="1.0" encoding="utf-8"?>
<com.mindinventory.midrawer.MIDrawerView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1e6f7"
    tools:context=".Activities.Dashboard.StartingActivity"
    android:id="@+id/drawer_layout_main_d"
    app:sliderType="slide"
    tools:openDrawer="start"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include
        android:id="@+id/in_dashboard_layout"
        layout="@layout/dashboard_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view_mainA"
        android:layout_gravity="start"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/gradient2"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_nav_image"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:adjustViewBounds="true"
                android:padding="10dp"
                android:src="@drawable/user" />

            <TextView
                android:id="@+id/tv_nav_username"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:text="Welcome To Dashboard"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:fontFamily="@font/proxima_family"/>

            <TextView
                android:id="@+id/tv_nav_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:layout_marginStart="20dp"
                android:text=""
                android:fontFamily="@font/proxima_nova_bold"
                android:textColor="@color/white"
                android:textSize="16sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="220dp"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient2"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/dashboard_property"
                    android:drawableTint="@color/icon_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?selectableItemBackground"
                    android:drawablePadding="5dp"
                    android:paddingLeft="5dp"
                    android:paddingBottom="13dp"
                    android:paddingTop="13dp"
                    android:fontFamily="@font/proxima_family"
                    android:text="Propertys"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/grey_dark"
                    android:textSize="16sp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginEnd="10dp"
                    android:background="@color/grey_very_light"/>
                <TextView
                    android:id="@+id/dashboard_loans"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?selectableItemBackground"
                    android:drawablePadding="5dp"
                    android:paddingLeft="5dp"
                    android:drawableTint="@color/icon_color"
                    android:paddingBottom="13dp"
                    android:paddingTop="13dp"
                    android:fontFamily="@font/proxima_family"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="Loans"
                    android:textColor="@color/grey_dark"
                    android:textSize="16sp"/>/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginEnd="10dp"
                    android:background="@color/grey_very_light"/>

                <TextView
                    android:id="@+id/dashboard_Business"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?selectableItemBackground"
                    android:drawablePadding="5dp"
                    android:paddingLeft="5dp"
                    android:drawableTint="@color/icon_color"
                    android:paddingTop="13dp"
                    android:paddingBottom="13dp"
                    android:fontFamily="@font/proxima_family"
                    android:text="Business"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/grey_dark"
                    android:textSize="16sp"/>/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginEnd="10dp"
                    android:background="@color/grey_very_light"/>

                <TextView
                    android:id="@+id/dashboard_constructions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?selectableItemBackground"
                    android:drawablePadding="5dp"
                    android:paddingLeft="5dp"
                    android:drawableTint="@color/icon_color"
                    android:paddingTop="13dp"
                    android:paddingBottom="13dp"
                    android:fontFamily="@font/proxima_family"
                    android:text="Constructions"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/grey_dark"
                    android:textSize="16sp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginEnd="10dp"
                    android:background="@color/grey_very_light"/>
                <TextView
                    android:id="@+id/dashboard_travels"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?selectableItemBackground"
                    android:drawablePadding="5dp"
                    android:paddingLeft="5dp"
                    android:drawableTint="@color/icon_color"
                    android:paddingTop="13dp"
                    android:paddingBottom="13dp"
                    android:fontFamily="@font/proxima_family"
                    android:text="Travels"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/grey_dark"
                    android:textSize="16sp"/>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginEnd="10dp"
                    android:background="@color/grey_very_light"/>

                <TextView
                    android:id="@+id/dashboard_rented"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?selectableItemBackground"
                    android:drawablePadding="5dp"
                    android:paddingLeft="5dp"
                    android:drawableTint="@color/icon_color"
                    android:paddingTop="13dp"
                    android:paddingBottom="13dp"
                    android:fontFamily="@font/proxima_family"
                    android:text="Propertys for Rent"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/grey_dark"
                    android:textSize="16sp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginEnd="10dp"
                    android:background="@color/grey_very_light"/>
                <TextView
                    android:id="@+id/dashboard_hotels"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?selectableItemBackground"
                    android:drawablePadding="5dp"
                    android:paddingLeft="5dp"
                    android:drawableTint="@color/icon_color"
                    android:paddingTop="13dp"
                    android:paddingBottom="13dp"
                    android:fontFamily="@font/proxima_family"
                    android:text="Hotels"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/grey_dark"
                    android:textSize="16sp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginEnd="10dp"
                    android:background="@color/grey_very_light"/>
                <TextView
                    android:id="@+id/dashboard_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?selectableItemBackground"
                    android:drawablePadding="5dp"
                    android:paddingLeft="5dp"
                    android:drawableTint="@color/icon_color"
                    android:paddingTop="13dp"
                    android:paddingBottom="13dp"
                    android:fontFamily="@font/proxima_family"
                    android:text="Profile"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/grey_dark"
                    android:textSize="16sp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginEnd="10dp"
                    android:background="@color/grey_very_light"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:background="@drawable/gradient2"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/btn_nav_logout"
                    android:text="Logout"
                    android:drawableTint="@color/white"
                    android:layout_weight="1"
                    android:fontFamily="@font/proxima_nova_bold"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:backgroundTint="#FF9800"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    />


            </LinearLayout>

        </LinearLayout>


    </com.google.android.material.navigation.NavigationView>
</com.mindinventory.midrawer.MIDrawerView>


