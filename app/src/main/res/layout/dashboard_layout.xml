<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <LinearLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_nav_view"
                    android:layout_width="40dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="3dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="5dp"
                    android:background="?selectableItemBackground"
                    android:padding="5dp"
                    android:src="@drawable/ic_menu"
                    app:tint="@color/white" />

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="0dp"
                    android:layout_weight="0.9"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15dp"
                        android:gravity="start|center"
                        android:layout_gravity="center"
                        android:fontFamily="@font/lato_bold"
                        android:text="GBD"
                        android:textColor="@color/white"
                        android:textSize="20sp" />


                </LinearLayout>


                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="0dp"
                    android:layout_weight="0.9"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_bell"
                        android:layout_width="40dp"
                        android:layout_height="35dp"
                        android:layout_marginTop="3dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="5dp"
                        android:background="?selectableItemBackground"
                        android:padding="5dp"
                        android:src="@drawable/bell"
                        app:tint="@color/white" />


                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/search"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.appcompat.widget.Toolbar
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    app:contentInsetStartWithNavigation="0dp">

                    <LinearLayout
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/edittext_back"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_search"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:padding="13dp"
                            android:src="@drawable/ic_search_location"
                            app:tint="@color/grey" />

                        <EditText
                            android:id="@+id/edt_search2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@null"
                            android:gravity="center_vertical"
                            android:hint="Search by Project..."
                            android:textColor="@color/black"
                            android:textColorHint="@color/grey_light"
                            android:textSize="18sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/iv_search" />

                        <ImageView
                            android:background="@drawable/thumb"
                            android:backgroundTint="@color/black"
                            android:layout_marginEnd="3dp"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="3dp"
                            android:padding="12dp"
                            android:src="@drawable/search_hallow"
                            app:tint="@color/grey" />

                    </LinearLayout>
                </androidx.appcompat.widget.Toolbar>

            </LinearLayout>


        </LinearLayout>





        <LinearLayout
            android:layout_marginTop="120dp"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">


            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/data_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/gradient"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"

                            android:layout_marginTop="15dp"
                            app:layout_constraintTop_toTopOf="parent">

                            <LinearLayout
                                android:id="@+id/cv_jobs"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:paddingBottom="8dp">
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="30dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginBottom="5dp"
                                    android:src="@drawable/ic_job"
                                    android:layout_gravity="center_vertical"/>
                                <TextView
                                    android:text="Jobs"
                                    android:gravity="center"
                                    android:layout_marginEnd="10dp"
                                    android:layout_marginStart="10dp"
                                    android:maxLines="2"
                                    android:fontFamily="@font/proxima_nova_semi_bold"
                                    android:layout_marginTop="2dp"
                                    android:textColor="@color/white"
                                    android:textSize="14sp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/cv_loans"
                                android:paddingBottom="8dp"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="30dp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginBottom="5dp"
                                    android:src="@drawable/ic_loans" />

                                <TextView
                                    android:text="Loans"
                                    android:gravity="center"
                                    android:layout_marginEnd="10dp"
                                    android:layout_marginStart="10dp"
                                    android:maxLines="2"
                                    android:fontFamily="@font/proxima_nova_semi_bold"
                                    android:layout_marginTop="2dp"
                                    android:textColor="@color/white"
                                    android:textSize="14sp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/cv_propertys"
                                android:paddingBottom="8dp"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                >
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="30dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginBottom="5dp"
                                    android:src="@drawable/ic_property"
                                    android:layout_gravity="center_vertical"/>
                                <TextView
                                    android:text="Properties"
                                    android:gravity="center"
                                    android:layout_marginEnd="10dp"
                                    android:layout_marginStart="10dp"
                                    android:maxLines="2"
                                    android:fontFamily="@font/proxima_nova_semi_bold"
                                    android:layout_marginTop="2dp"
                                    android:textColor="@color/white"
                                    android:textSize="14sp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/cv_servicess"
                                android:paddingBottom="8dp"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="30dp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginBottom="5dp"
                                    android:src="@drawable/ic_shopping" />

                                <TextView
                                    android:text="Servicess"
                                    android:gravity="center"
                                    android:layout_marginEnd="10dp"
                                    android:layout_marginStart="10dp"
                                    android:maxLines="2"
                                    android:fontFamily="@font/proxima_nova_semi_bold"
                                    android:layout_marginTop="2dp"
                                    android:textColor="@color/white"
                                    android:textSize="14sp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>

                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="5dp"
                        android:gravity="center"
                        android:background="@color/white"

                        android:orientation="vertical"
                        app:layout_constraintTop_toTopOf="parent">

                        <!-- <androidx.cardview.widget.CardView
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:layout_marginEnd="10dp"
                             android:layout_marginStart="10dp"
                             android:layout_marginTop="10dp"
                             android:layout_marginBottom="10dp"
                             android:elevation="3dp"
                             android:background="@color/white"
                             app:cardCornerRadius="10dp">-->


                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_home_event"
                            android:layout_width="370dp"
                            android:layout_height="160dp"
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center" />

                        <!--  </androidx.cardview.widget.CardView>-->


                    </LinearLayout>

                    <LinearLayout
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:background="@color/white"
                        android:layout_marginEnd="5dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginStart="5dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:fontFamily="@font/proxima_nova_semi_bold"

                            android:layout_marginTop="10dp"
                            android:text="Upcoming Projects"
                            android:textColor="@color/black"
                            android:textSize="15sp" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_adds_layots1"
                            android:layout_width="match_parent"
                            android:layout_marginStart="3dp"
                            android:layout_marginEnd="3dp"
                            android:layout_marginTop="10dp"
                            android:layout_height="match_parent" />

                        <!--  </androidx.cardview.widget.CardView>-->


                    </LinearLayout>


                <LinearLayout
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:gravity="center"
                        android:text="Hot Deals for you"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:fontFamily="@font/proxima_nova_semi_bold" />

                    <LinearLayout
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_dash_prop"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="2dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="2dp" />
                    </LinearLayout>
                </LinearLayout>

                    <LinearLayout
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:visibility="gone"
                        android:orientation="vertical">
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:elevation="3dp"
                            app:cardCornerRadius="15dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:orientation="horizontal"
                                android:id="@+id/ll_back"
                                android:background="@color/grey">
                                <FrameLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp">
                                    <ImageView
                                        android:layout_width="60dp"
                                        android:layout_height="match_parent"
                                        android:src="@drawable/sound"
                                        />

                                </FrameLayout>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:maxLines="5"
                                    android:gravity="center_vertical"
                                    android:textColor="@color/white"
                                    android:textSize="14sp"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginTop="3dp"
                                    android:layout_marginBottom="3dp"
                                    android:textStyle="bold"/>

                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        android:gravity="center"
                        app:layout_constraintTop_toTopOf="parent">

                        <androidx.cardview.widget.CardView
                            android:layout_width="100dp"
                            android:layout_height="100dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:background="@color/white">
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="5dp"
                                    android:src="@drawable/ic_service"
                                    android:layout_gravity="center_vertical"/>
                                <TextView
                                    android:text="Services"
                                    android:gravity="center"
                                    android:layout_marginEnd="10dp"
                                    android:layout_marginStart="10dp"
                                    android:maxLines="2"
                                    android:textStyle="bold"
                                    android:layout_marginTop="10dp"
                                    android:textColor="@color/black"
                                    android:textSize="14sp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>


                        <androidx.cardview.widget.CardView

                            android:layout_width="100dp"
                            android:layout_height="100dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:background="@color/white">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="5dp"
                                    android:src="@drawable/ic_transport" />

                                <TextView
                                    android:text="Transport"
                                    android:gravity="center"
                                    android:layout_marginEnd="10dp"
                                    android:layout_marginStart="10dp"
                                    android:maxLines="2"
                                    android:textStyle="bold"
                                    android:layout_marginTop="10dp"
                                    android:textColor="@color/black"
                                    android:textSize="14sp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>

                            </LinearLayout>


                        </androidx.cardview.widget.CardView>



                        <androidx.cardview.widget.CardView
                            android:id="@+id/cv_buy"
                            android:layout_width="100dp"
                            android:layout_height="100dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:background="@color/white">
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="5dp"
                                    android:src="@drawable/ic_construction"
                                    android:layout_gravity="center_vertical"/>

                                <TextView
                                    android:text="Construction"
                                    android:gravity="center"
                                    android:layout_marginEnd="10dp"
                                    android:layout_marginStart="10dp"
                                    android:maxLines="2"
                                    android:textStyle="bold"
                                    android:layout_marginTop="10dp"
                                    android:textColor="@color/black"
                                    android:textSize="14sp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cv_sell"
                            android:layout_width="100dp"
                            android:layout_height="100dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:background="@color/white">
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="5dp"
                                    android:src="@drawable/ic_sell"
                                    android:layout_gravity="center_vertical"/>
                                <TextView
                                    android:text="Sell"
                                    android:gravity="center"
                                    android:layout_marginEnd="10dp"
                                    android:layout_marginStart="10dp"
                                    android:maxLines="2"
                                    android:textStyle="bold"
                                    android:layout_marginTop="10dp"
                                    android:textColor="@color/black"
                                    android:textSize="14sp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>

                            </LinearLayout>


                        </androidx.cardview.widget.CardView>




                    </LinearLayout>



                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_home_employee_self_service"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="2dp" />


                </LinearLayout>

            </androidx.core.widget.NestedScrollView>

        </LinearLayout>
    </FrameLayout>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavShift"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/purple_500"
        app:itemIconTint="@color/nav_item_state_list"
        app:itemTextColor="@color/nav_item_state_list"
        app:layout_behavior="@string/hide_bottom_view_on_scroll_behavior"
        app:menu="@menu/menu_items">

    </com.google.android.material.bottomnavigation.BottomNavigationView>



</androidx.coordinatorlayout.widget.CoordinatorLayout>