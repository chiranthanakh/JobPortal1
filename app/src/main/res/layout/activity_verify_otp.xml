<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/relativeLayout3"
        android:background="@drawable/top_bg_curve"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <com.mukesh.OtpView
            android:id="@+id/otp_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="316dp"
            android:cursorVisible="true"
            android:enabled="true"
            android:focusable="true"
            android:inputType="number"
            android:itemBackground="@drawable/et_otp_bg"
            android:textColor="@color/black"
            android:theme="@style/OtpTheme"
            app:OtpCursorColor="@color/colorPrimary"
            app:OtpItemCount="4"
            app:OtpLineColor="@color/colorPrimary"
            app:OtpState_filled="true"
            app:OtpViewType="none"
            app:itemSpacing="8dp" />


        <TextView
            android:id="@+id/tv_welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="55dp"
            android:text="Welcome back to\nGSTeam Call CRM"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="normal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_welcome"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:text="Verify your mobile number for\nuse this application"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="normal" />

        <Button
            android:id="@+id/btn_verify_otp"
            android:onClick="onVerifyOtp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/otp_view"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="14dp"
            android:background="@drawable/btn_bg"
            android:gravity="center"
            android:text="Verify OTP"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/progress_layout_site_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone"
        android:background="#4d000000">
        <ProgressBar
            android:visibility="gone"
            android:id="@+id/progress_bar_otp"
            android:layout_centerInParent="true"
            android:layout_marginTop="80dp"
            android:layout_width="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>